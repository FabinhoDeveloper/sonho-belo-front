<div class="container my-5">
    <h2 class="text-center">Gerenciamento de Encomendas</h2>

    <!-- Lista de Encomendas -->
    <div class="card">
        <div class="card-header">Encomendas Cadastradas</div>
        <ul class="list-group list-group-flush" id="encomenda-lista">
            <!-- Exemplo de Item de Encomenda, deve ser substituído pelos dados do backend -->
            {{#each encomendas}}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-3">
                        <h5>Nome: <small>{{this.nome_cliente}}</small></h5>
                        <p>Sabores:</p>
                            {{#each this.sabores}}
                            <small>{{this.nome}}</small>                            
                            {{/each}}
                        <p>Tipo: <small>{{this.tipo}}</small></p>
                        <p>Quantidade: <small>{{this.quantidade}}</small></p>
                    </div>
                    <div class="col-md-3">
                        <p>Data de Retirada: <small>{{formatDate this.data_retirada}}</small></p>
                        <p>Hora de Retirada: <small>{{this.hora_retirada}}</small></p>
                    </div>
                    <div class="col-md-3">
                        <p>Para Entrega: 
                            {{#isEqual this.para_entrega 'true'}}
                                <small>Sim</small>
                            {{else}}
                                <small>Não</small>
                            {{/isEqual}}
                        </p>
                        <p>Endereço: <small>{{this.endereco_entrega}}</small></p>
                    </div>
                    <div class="col-md-3 text-end">
                        <button class="btn btn-danger btn-sm" onclick="deleteEncomenda(id)">Concluir</button>
                    </div>
                </div>
            </li>
            {{/each}}
            <!-- Repita para cada encomenda -->
        </ul>
    </div>
</div>

