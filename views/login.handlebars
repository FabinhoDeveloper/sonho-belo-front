<link rel="stylesheet" href="/css/style-login.css">

<div class="login-card">
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <!-- Logo -->
    <img src="/assets/Logo.png" alt="Logo Sonho Belo" class="logo">
    
    <!-- Título -->
    <h2 class="title">Sonho Belo - Login</h2>
    
    <!-- Formulário de Login -->
    <form id="form-login" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email">
        </div>
        <div class="mb-3">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha">
        </div>
        <button type="submit" class="btn-enviar btn w-100">Entrar</button>
    </form>
    {{#if primeiroLogin}}
        <a href="/admin/primeiro-cadastro">Realize aqui o primeiro login de usuário</a>
    {{/if}}
    
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.getElementById('form-login').addEventListener('submit', async function (event) {
        event.preventDefault();
        
        const email = document.getElementById('email').value;
        const senha = document.getElementById('senha').value;
        
        try {
            const response = await axios.post('/login', { email, senha });
            const response_json = response.data

            if (response_json.autorizado) {
                window.location.href = '/admin/sabores';
            } else {
                alert("Credenciais incorretas.");
            }
        } catch (error) {
            console.error(error);
            alert("Erro ao realizar login.");
        }
    });
</script>