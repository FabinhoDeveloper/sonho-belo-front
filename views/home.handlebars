</section>

<section id="encomenda" class="encomendas py-5">
  <div class="container">
    <h2 class="text-center mb-5">Faça sua Encomenda</h2>
    <form action="/encomendas" method="POST" class="row g-3">

      <!-- Nome do Cliente -->
      <div class="col-md-12">
        <label for="nome" class="form-label">Seu Nome</label>
        <input type="text" id="nome" name="nome" class="form-control" required>
      </div>

      <!-- Seleção de Sabores -->
      <div class="col-md-12">
        <label for="sabores" class="form-label">Escolha os Sabores</label>
        <select id="sabores" name="sabores" class="form-select" multiple required>
          <option value="Brigadeiro Tradicional">Brigadeiro Tradicional</option>
          <option value="Brigadeiro de Leite Ninho">Brigadeiro de Leite Ninho</option>
          <option value="Brigadeiro de Morango">Brigadeiro de Morango</option>
          <option value="Brigadeiro de Pistache">Brigadeiro de Pistache</option>
          <option value="Brigadeiro Gourmet">Brigadeiro Gourmet</option>
          <!-- Adicionar mais sabores conforme necessário -->
        </select>
        <small class="form-text text-muted">Segure a tecla "Ctrl" ou "Cmd" para selecionar múltiplos sabores.</small>
      </div>

      <!-- Campo para Data de Retirada -->
      <div class="col-md-6">
        <label for="dataRetirada" class="form-label">Data de Retirada</label>
        <input type="date" id="data-retirada" name="data-retirada" class="form-control" required>
      </div>

      <!-- Campo para Hora de Retirada -->
      <div class="col-md-6">
        <label for="horaRetirada" class="form-label">Hora de Retirada</label>
        <input type="time" id="hora-retirada" name="hora-retirada" class="form-control" required>
      </div>

      <!-- Seleção de Quantidade -->
      <div class="col-md-12">
        <label for="quantidade" class="form-label">Selecione a Quantidade</label>
        <select id="quantidade" name="quantidade" class="form-select" required>
          <option value="caixa">Caixa (4 Brigadeiros)</option>
          <option value="50">50 Brigadeiros</option>
          <option value="100">100 Brigadeiros</option>
        </select>
      </div>

      <!-- Opção de Entrega -->
      <div class="col-md-12">
        <label for="entrega" class="form-label">Deseja Entrega?</label>
        <small class="form-text text-muted">Endereço para retirada: Rua Nicolau de Lucca, 144, Mirante das Agulhas, Resende - RJ.</small>
        <select id="entrega" name="entrega" class="form-select" required onchange="toggleEndereco()">
          <option value="false">Não</option>
          <option value="true">Sim</option>
        </select>
      </div>

      <!-- Campo para Endereço (Escondido por padrão) -->
      <div class="col-md-12" id="enderecoDiv" style="display: none;">
        <label for="endereco" class="form-label">Endereço para Entrega</label>
        <input type="text" id="endereco" name="endereco" class="form-control" placeholder="Informe o endereço completo">
      </div>

      <!-- Botão de Enviar -->
      <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary">Fazer Encomenda</button>
      </div>
    </form>
  </div>
</section>

