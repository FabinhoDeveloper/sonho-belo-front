</nav>

<section id="sabores" class="sabores container">
  <h2>Todos os Sabores</h2>
  <div class="row">
      <!-- Card 1 -->
      {{#each sabores}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="{{this.imagemUrl}}" class="card-img-top" alt="Brigadeiro de paçoca">
                <div class="card-body">
                    <h5 class="card-title">{{this.nome}}</h5>
                    <p class="card-text">{{this.descricao}}</p>
                </div>
            </div>
        </div>
      {{/each}}
  </div>
</section>

