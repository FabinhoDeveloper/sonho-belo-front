<div class="card">
        <h2 class="card-header text-center">Gerenciamento de Sabores</h2>

        <div class="d-flex justify-content-end mb-3">
          <a href="/admin/cadastro-sabor" class="btn btn-personalizado">Cadastrar Novo Sabor</a>
        </div>

        <ul class="list-group list-group-flush" id="sabor-lista">
            {{#each sabores}}
                <li class="list-group-item d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <img src="{{this.imagemUrl}}" alt="Imagem do Sabor" class="img-thumbnail me-3" style="width: 50px; height: 50px;">
                        <div>
                            <h5 class="mb-0">{{this.nome}}</h5>
                            <small class="text-muted">{{this.descricao}}</small>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-secondary btn-sm me-2" onclick="editSabor(id)">Editar</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteSabor(id)">Excluir</button>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>

