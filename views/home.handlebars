<section id="encomenda" class="encomendas py-5">
  <div class="container">
    <h2 class="text-center mb-5">Faça sua Encomenda</h2>
    <form action="/api/cadastro-encomenda" method="POST" class="row g-3">

      <!-- Nome do Cliente -->
      <div class="col-md-12">
        <label for="nome_cliente" class="form-label">Seu Nome</label>
        <input type="text" id="nome_cliente" name="nome_cliente" class="form-control" required>
      </div>

      <!-- Seleção de Sabores -->
      <div class="col-md-12">
        <label for="sabores" class="form-label">Escolha os Sabores - Até 4 Sabores</label>
        <div id="sabores-form" class="form-check">
            {{#each opcoes_formulario}}
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="sabores" id="sabor-{{this.nome}}" value="{{this.id}}" onclick="checkMaxSelections(this)">
                <label class="form-check-label" for="sabor-{{this.nome}}">
                    {{this.nome}}
                </label>
            </div>
            {{/each}}
        </div>
    </div>

      <!-- Campo para Data de Retirada -->
      <div class="col-md-6">
        <label for="dataRetirada" class="form-label">Data de Retirada</label>
        <input type="date" id="data-retirada" name="dataRetirada" class="form-control" required>
      </div>

      <!-- Campo para Hora de Retirada -->
      <div class="col-md-6">
        <label for="horaRetirada" class="form-label">Hora de Retirada</label>
        <input type="time" id="hora-retirada" name="horaRetirada" class="form-control" required>
      </div>

      <!-- Seleção de Quantidade -->
      <div class="col-md-12">
        <label for="tipo" class="form-label">Selecione o Tipo de Encomenda</label>
        <select id="tipo" name="tipo" class="form-select" required>
          <option value="caixa">Caixa (4 Brigadeiros) - R$ 10,00 </option>
          <option value="50">50 Brigadeiros - R$ 75,00</option>
          <option value="100">Cento (100 Brigadeiros) - R$ 125,00</option>
        </select>
      </div>

      <!-- Seleção de Quantidade -->
      <div class="col-md-12">
        <label for="quantidade" class="form-label">Selecione a Quantidade</label>
        <input type="number" class="form-control" name="quantidade" id="quantidade" value="1" required>
      </div>

      <!-- Opção de Entrega -->
      <div class="col-md-12">
        <label for="entrega" class="form-label">Deseja Entrega?</label>
        <small class="form-text text-muted">Endereço para retirada: Rua Nicolau de Lucca, 144, Mirante das Agulhas, Resende - RJ.</small>
        <select id="entrega" name="entrega" class="form-select" required onchange="toggleEndereco()">
          <option value="false">Não</option>
          <option value="true">Sim</option>
        </select>
      </div>

      <!-- Campo para Endereço (Escondido por padrão) -->
      <div class="col-md-12" id="enderecoDiv" style="display: none;">
        <label for="endereco" class="form-label">Endereço para Entrega</label>
        <input type="text" id="endereco" name="endereco" class="form-control" placeholder="Informe o endereço completo">
      </div>

      <!-- Botão de Enviar -->
      <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary">Fazer Encomenda</button>
      </div>
    </form>
  </div>
</section>

