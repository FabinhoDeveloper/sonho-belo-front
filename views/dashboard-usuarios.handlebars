<div class="container my-5">
    <h2 class="text-center">Gerenciamento de Usuários</h2>

    <!-- Botão para Página de Cadastro -->
    <div class="d-flex justify-content-end mb-3">
        <a href="/admin/cadastro-usuario" class="btn btn-success">Cadastrar Novo Usuário</a>
    </div>

    <!-- Lista de Usuários -->
    <div class="card">
        <div class="card-header">Usuários Cadastrados</div>
        <ul class="list-group list-group-flush" id="usuario-lista">
            <!-- Cada item da lista representa um usuário -->
            <!-- Template de exemplo, substitua com dados do backend -->
            <li class="list-group-item d-flex align-items-center justify-content-between">
                {{#each usuarios}}
                    <div>
                        <h5 class="mb-0">{{this.nome}}</h5>
                        <small>{{this.email}}</small><br>
                    </div>
                    <button class="btn btn-danger btn-sm" onclick="deleteUsuario(id)">Excluir</button>
                {{/each}}
            </li>
            <!-- Repita para cada usuário -->
        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Função para simular a exclusão de um usuário
    function deleteUsuario(id) {
        if (confirm("Tem certeza de que deseja excluir este usuário?")) {
            // Aqui, você poderia fazer uma chamada ao backend para excluir o usuário
            alert(`Usuário com ID ${id} excluído.`);
        }
    }
</script>