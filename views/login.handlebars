<link rel="stylesheet" href="/css/style-login.css">

<div class="login-card">
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <!-- Logo -->
    <img src="/assets/Logo.png" alt="Logo Sonho Belo" class="logo">
    
    <!-- Título -->
    <h2 class="title">Sonho Belo - Login</h2>
    
    <!-- Formulário de Login -->
    <form id="form-login" method="post" action="/login/autenticacao">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email">
        </div>
        <div class="mb-3">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha">
        </div>
        <button type="submit" class="btn-enviar btn w-100">Entrar</button>
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
