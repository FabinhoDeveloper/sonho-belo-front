<link rel="stylesheet" href="/css/style-login.css">

<div class="login-card">
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <!-- Logo -->
    <img src="/assets/Logo.png" alt="Logo Sonho Belo" class="logo">
    
    <!-- Título -->
    <h2 class="title">Sonho Belo - Primeiro Cadastro</h2>
    
    <form id="form-cadastro" method="post">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" required>
        </div>
        <div class="mb-3">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required>
        </div>
        <div class="mb-3">
            <label for="confirmarSenha" class="form-label">Confirmar Senha</label>
            <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha" placeholder="Confirme sua senha" required>
        </div>
        <button type="submit" class="btn-enviar btn w-100">Cadastrar</button>
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.getElementById('form-cadastro').addEventListener('submit', async function (event) {
        event.preventDefault();
        
        const nome = document.getElementById('nome').value;
        const email = document.getElementById('email').value;
        const senha = document.getElementById('senha').value;
        const confirmarSenha = document.getElementById('confirmarSenha').value;

        // Valida se as senhas correspondem
        if (senha !== confirmarSenha) {
            alert("As senhas não correspondem.");
            return;
        }

        try {
            const response = await axios.post('/api/primeiro-cadastro', { nome, email, senha });
            const response_json = response.data;

            if (response_json.sucesso) {
                alert(response_json.mensagem)
                window.location.href = '/admin/dashboard'; // Redireciona para a página de login após o cadastro
            } else {
                alert(response_json.mensagem || "Erro ao realizar o cadastro.");
            }
        } catch (error) {
            console.error(error);
            alert("Erro ao realizar cadastro.");
        }
    });
</script>

<style>
    body {
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    .login-card {
        width: 400px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        border-radius: 8px;
    }
    .logo {
        display: block;
        margin: 0 auto 20px;
        width: 100px;
    }
    .title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
        font-family: "Satisfy", cursive;
        font-weight: 400;
        font-style: normal;
    }
    .btn-enviar {
        background-color: #F7BAB2;
    }
    .btn-enviar:hover {
        background-color: #f98273;
        color: white;
    }
    .alert {
        margin-bottom: 15px;
    }
</style>
